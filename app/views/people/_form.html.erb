<%= form_for @person do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<p></p>
<%= f.label :hair_color %>
<%= f.text_field :hair_color %>
<p></p>
<%= f.label :age %>
<%= f.text_field :age %>
<p></p>
<%= f.label :eye_color %>
<%= f.text_field :eye_color %>
<p></p>
<%= f.label :gender %>
<%= f.text_field :gender %>
